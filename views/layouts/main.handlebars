<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
    <!--*Tailwind linking-->
    <script rel="stylesheet" src="https://cdn.tailwindcss.com"></script>
    <!--*Fonts-->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Trirong"
    />
  </head>

  <body>
    <div class="container">
      <!--This contains the two navbars split into two. 
        One contains the categories for exercises, the other contains user info -->
      <nav
        class="container-fluid w-screen flex h-12 sm:grid sm:grid-cols-1 bg-slate-600 justify-start sm:flex sm:justify-center lg:flex"
      >
        <div class="navbar">

          <a href="#Weight Lifting">Weight Lifting</a>
          <a href="#HIIT">HIIT</a>
          <a href="#Walking">Walking</a>
          <a href="#Yoga">Yoga</a>

        </div>
      </nav>
      <nav
        class="container-fluid flex w-screen h-12 sm:grid sm:grid-cols-1 bg-slate-300 justify-start sm:flex sm:justify-center lg:flex"
      >
        <div class="navbar">

          <a href="#Nutrition">Nutrition</a>
          <a href="/Home">Work It Out</a>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href="/MyAccount">MyAccount</a>
            |
            <button class="no-button" id="logout">logout</button>
          {{else}}
            <a href="/login">Login</a>
          {{/if}}
        </div>
      </nav>

      <main class="w-screen h-100">
        {{{body}}}
      </main>

      <footer>

      </footer>
    </div>

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>