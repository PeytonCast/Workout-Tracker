<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="stylesheet" href="/css/style.css" />
    <!--*Tailwind linking-->
    <script rel="stylesheet" src="https://cdn.tailwindcss.com"></script>
    <!--*Fonts-->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Trirong"
    />
  </head>

  <body>
    <div class="container">
      <!--This contains the two navbars split into two. 
        One contains the categories for exercises, the other contains user info -->
      {{! <nav
      class="container-fluid w-screen flex h-12 sm:grid sm:grid-cols-1 bg-slate-600 justify-start sm:flex sm:justify-center lg:flex">
      <div class="navbar">

        <a href="#Weight Lifting">Weight Lifting</a>
        <a href="#HIIT">HIIT</a>
        <a href="#Walking">Walking</a>
        <a href="#Yoga">Yoga</a>

      </div>
    </nav> }}
      {{! justify-start sm:flex sm:justify-center lg:flex }}
      <nav
        class="container-fluid flex w-screen h-12 sm:grid sm:grid-cols-1 bg-slate-600 sm:flex"
      >
        <ol class="navbar">
          <li><a href="/">Work It Out</a></li>
          <li><a href="/nutrition">Nutrition</a></li>
          {{#if loggedIn}}
            <li><a href="/myAccount">MyAccount</a></li>
            <!-- Conditionally render login or logout links class="no-button" -->
            <li><button id="logout">Logout</button></li>
          {{else}}
            <li><a href="/login">Login</a></li>
          {{/if}}

        </ol>
      </nav>

      <main class="w-screen h-100">
        {{{body}}}
      </main>

    </div>

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

  <footer>
    <div class="footerSection w-screen bg-slate-500 p-3">
      <div class="footerName">Work It Out</div>
    </div>
  </footer>

</html>