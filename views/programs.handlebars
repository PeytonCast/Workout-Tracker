<section>
  <div class="flex flex-col bg-slate-300 m-3">
    <div class="programName">G O A L S</div>
    <div class="m-1 col-span-3 grid grid-rows-1 gap-2 p-3 sm:grid-cols-2">
      <div
        class="grid grid-rows-2 bg-slate-200 border rounded-2xl border-2 p-3"
      >
        <div class="tracker bg-slate-300 h-20">Choose a Goal</div>
        <form class="goals-form goals">
          <input id='goals-user-id' type="text" value="{{userId}}" hidden>
          <input
            type="checkbox"
            id="goal-one"
            name="goal-one"
            value="1"
          />
          <label for="goal-one">Flexibility and Tone</label><br />
         
         
          <input type="checkbox" id="goal-two" name="goal-two" value="2" />
           <label for="goal-two">Gain Muscle</label><br />

          <input
            type="checkbox" class="checkbox"
            id="goal-three"
            name="goal-three"
            value="3"
          /> <label for="goal-three">cardiovascular conditioning</label><br />
          
   <input class="diaryBtn btn-primary border-2 bg-slate-500 p-2 m-4 rounded-2xl" type="submit" value="submit">
        </form>
        {{!-- class="diaryBtn btn-primary border-2 bg-slate-500 p-2 m-4 rounded-2xl" --}}
     
      </div>
      <div
        class="grid grid-rows-2 bg-slate-400 border rounded-2xl border-2 p-3"
      >
        <div class="exercises bg-slate-300 h-20">Goals Chosen</div>
         <div>
          <p>{{goals.name}}</p>
         </div>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="diarySection bg-slate-900 p-3">
    <div class="diaryName">D I A R Y</div>
    <form class="diaryEntry">
      <div class="dateEntry">
        <label for="date">Date:</label>
        <input type="date" id="date" name="date" />
      </div>
      <div class="check">
        <h2 class="diaryText">Did You Complete Your Goals For Today?</h2>
        <label for="complete">Completed</label>
        <input type="radio" id="completed" name="completed" value="completed" />
      </div>
      <div class="check">
        <label for="complete">Not Completed</label>
        <input
          type="radio"
          id="notCompleted"
          name="notCompleted"
          value="notCompleted"
        />
      </div>
      <div class="diaryEntry">
        <label for="comments">Diary Entry:</label>
        <input type="text" id="comments" name="comments" />
      </div>
      <button
        class="diaryBtn btn-primary border-2 bg-slate-500 p-2 m-4 rounded-2xl"
      >
        Submit</button>
    </form>

  </div>
</section>
