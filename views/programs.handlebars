<section>
  <div class="flex flex-col h-0.4 bg-slate-300 m-3">
    <div class="programName">G O A L S</div>
    <div class="m-1 h-full col-span-3 grid grid-cols-2 gap-2 p-3">
      <div
        class="grid grid-rows-2 bg-slate-200 border rounded-2xl border-2 p-3"
      >
        <div class="tracker bg-slate-300 h-20">Choose Your Goals</div>
        <form class="goals">
          <input
            type="checkbox"
            id="goal-one"
            name="goal-one"
            value="Build Muscle"
          />
          <label for="goal one"> Build Muscle</label><br />
          <input type="checkbox" id="goal-two" name="goal-two" value="Tone" />
          <label for="vehicle2"> Flexibility and Tone</label><br />
          <input
            type="checkbox"
            id="goal-three"
            name="goal-three"
            value="Conditioning"
          />
          <label for="goal-three"> Cardiovascular Conditioning</label>

        </form>
        <button
          class="goalsBtn btn-primary border-2 bg-slate-500 p-3 rounded-2xl"
        > Submit</button>
      </div>
      <div
        class="grid grid-rows-2 bg-slate-400 border rounded-2xl border-2 p-3"
      >
        <div class="exercises bg-slate-300 h-20">Goals Chosen</div>

      </div>
    </div>
  </div>
</section>
<section>
  <div class="diarySection h-1/2 bg-slate-900 p-3">
    <div class="diaryName">D I A R Y</div>
    <form class="diaryEntry">
      <div class="dateEntry">
        <label for="date">Date:</label>
        <input type="date p-3" id="date" name="date" />
      </div>
      <div class="check">
        <h2 class="diaryText">Did You Complete Your Goals For Today?</h2>
        <label for="complete">Completed</label>
        <input type="radio" id="completed" name="completed" value="completed" />
      </div>
      <div class="check">
        <label for="complete">Not Completed</label>
        <input
          type="radio"
          id="notCompleted"
          name="notCompleted"
          value="notCompleted"
        />
      </div>
      <div class="diaryEntry">
        <label for="comments">Diary Entry:</label>
        <input type="text" id="comments" name="comments" />
      </div>
    </form>
    <button class="diaryBtn btn-primary border-2 bg-slate-500 p-3 rounded-2xl">
      Submit</button>
  </div>
</section>

<section>
  <div class="flex flex-col h-1/2 bg-slate-300 p-3 m-3">
    <div class="m-1 h-full col-span-3 grid grid-cols-2 gap-2 p-3">
      <div
        class="grid grid-rows-2 bg-slate-200 border rounded-2xl border-2 p-3"
      >
        <div class="tracker bg-slate-300 h-20">Workout Tracker</div>
      </div>
      <div
        class="grid grid-rows-2 bg-slate-400 border rounded-2xl border-2 p-3"
      >
        <div class="exercises bg-slate-300 h-20">Exercises Completed</div>

      </div>
    </div>
  </div>
</section>