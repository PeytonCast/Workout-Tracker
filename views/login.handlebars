<style>
  body { background-color: white }
</style>
<section>
  <div class="flex flex-col h-3/4 p-10 ml-10">
    <div class="m-1 h-full col-span-3 grid grid-cols-2 gap-2 p-3">
      <div class="start bg-slate-400 w-3/4 border rounded-2xl">

        <div class="card p-8 m-5 border-2 bg-slate-300 rounded-2xl">
          <form class="form login-form">
            <div class="form-group">
              <p>Login:</p>
              <label class="form-label" for="username-login">Username:</label>
              <input
                class="form-input form-control"
                type="text"
                id="username-login"
              />
            </div>
            <div class="form-group">
              <label for="password-login">Password:</label>
              <input
                class="form-input form-control"
                type="password"
                id="password-login"
              />
            </div>
            <div class="BtnSpace">
              <button
                class="loginBtn btn-primary border-2 bg-slate-600 p-3 rounded-2xl hover:bg-slate-500"
                type="submit"
              >login</button>
            </div>
          </form>
        </div>
      </div>
      <div class="start bg-slate-400 w-3/4 border rounded-2xl">
        <div class="card p-8 m-5 border-2 bg-slate-300 rounded-2xl">
          <div class="login-card">
            <form class="form signup-form">
              <div class="form-group">
                <p>Sign Up:</p>
                <label for="username-signup">Username:</label>
                <input
                  class="form-input form-control"
                  type="text"
                  id="username-signup"
                />
              </div>
              <div class="form-group">
                <label for="password-signup">Password:</label>
                <input
                  class="form-input form-control"
                  type="password"
                  id="password-signup"
                />
              </div>
              <div class="BtnSpace">
                <button
                  class="signBtn btn-primary border-2 bg-slate-600 p-3 rounded-2xl hover:bg-slate-500"
                  type="submit"
                >sign up</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/js/login.js"></script>